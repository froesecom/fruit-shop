<a href="/">Place another order</a>
<div class="receipt">
  <% if @order.errors.any?  %>
    <h2>Sorry, that order cannot be fulfilled.</h2>
  <% else  %>
    <h2>Requested products</h2>
    <%= render partial: "product_requests/product_request", collection: @order.product_requests %> 
    <h2>Fulfilled request</h2>
    <%= render partial: "order_items/order_item", collection: @order.order_items %> 
    <h2>Total: <%= cents_to_dollars(@order.total) %></h2>
  <% end  %>
</div>
